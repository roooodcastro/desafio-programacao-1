<%= title "#{Purchase.model_name.human} #{@purchase.id}" %>

<div class="card card-body mb-3">
  <div class="row">
    <div class="col">
      <h3 class="my-0 text-dark">
        <%= t('messages.purchase_total_price') %>
        <span class="text-info"><%= number_to_currency @purchase.price_sum %></span>
      </h3>
    </div>
  </div>
</div>

<%= render partial: 'purchase_items/purchase_items',
           locals: { purchase_items: @purchase.purchase_items } %>

<div class="card card-body mt-3 d-block">
  <%= link_to t('messages.back'), purchases_path,
              class: 'btn btn-secondary px-5' %>
  <%= link_to t('messages.destroy'), @purchase, class: 'btn btn-danger px-5',
              method: :delete, data: { confirm: t('messages.confirm') } %>
</div>